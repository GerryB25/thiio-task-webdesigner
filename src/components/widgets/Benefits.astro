---
interface Props {
    titulo: string;
}

const { titulo } = Astro.props;
---

<div
    class="text-black font-semibold flex flex-row justify-center items-center gap-6 md:gap-2 lg:gap-4 text-sm lg:text-base">
    <div class="bg-#fa991c p-2 rounded-md">
        <slot />
    </div>
    <span class="text-start">{titulo}</span>
</div>

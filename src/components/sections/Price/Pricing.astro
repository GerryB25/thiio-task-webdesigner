---
import BottlePills from "../../../assets/BottlePills.astro";
import Details from "./Details.astro";
---

<section
    class="flex justify-center items-center w-full lg:h-screen bg-red-50 px-2 py-6 lg:px-48 lg:py-12 my-10 md:my-16">
    <div
        class="w-1/2 h-full rounded-2xl hidden md:flex flex-col justify-center items-center bg-white">
        <div
            class="flex w-2/3 lg:w-full h-2/3 aspect-square justify-center items-center drop-shadow-2xl">
            <BottlePills ancho="80%" largo="80%" />
        </div>
        <div class="w-full h-1/3 flex flex-col">
            <div class="w-full h-1/3 flex justify-center items-center">
                <button
                    class="bg-teal-800 capitalize py-1 px-3 md:px-8 rounded-2xl text-white font-medium">
                    Buy 1 get 3 free
                </button>
            </div>
            <div
                class="w-full h-2/3 flex flex-row justify-evenly items-center aspect-video">
                <div class="flex-1 size-2/3 lg:size-full drop-shadow-xl">
                    <BottlePills ancho="100%" largo="100%" />
                </div>
                <div class="flex-1 size-2/3 lg:size-full drop-shadow-xl">
                    <BottlePills ancho="100%" largo="100%" />
                </div>
                <div class="flex-1 size-2/3 lg:size-full drop-shadow-xl">
                    <BottlePills ancho="100%" largo="100%" />
                </div>
            </div>
        </div>
    </div>
    <Details />
</section>

---
import FiveStars from "./FiveStars.astro";
---

<section class="lg:px-48 w-full flex h-64 justify-center items-center">
    <article
        class="bg-#f9f7f7 w-full h-100 md:h-full flex flex-col justify-around lg:justify-between items-center rounded-2xl p-6">
        <div class="flex w-full justify-between items-center">
            <h2 class="text-2xl font-bold text-neutral-800">Reviews</h2>
            <span class="text-sm font-bold text-teal-800">
                Testimonial Name, who says...
            </span>
        </div>
        <div
            class="bg-white w-full flex h-4/5 rounded-2xl flex-col md:flex-row justify-evenly items-center">
            <div class="flex w-2/12 justify-center items-center">
                <img
                    loading="lazy"
                    class="rounded-full w-full md:w-2/3 aspect-square"
                    src="/testimonial.webp"
                    alt="profile-pic"
                />
            </div>
            <div
                class="w-10/12 flex flex-col justify-center items-center px-4 gap-4">
                <div class="flex w-full justify-between items-center">
                    <span class="text-sm font-bold">Testimonial Name</span>
                    <FiveStars clases="justify-center items-center" />
                </div>
                <p class="text-xs text-pretty">
